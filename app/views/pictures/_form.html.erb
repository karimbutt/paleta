        <div id="upload-form">
          <%= form_for(@picture) do |f| %>
            <% if @picture.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

                <ul>
                <% @picture.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            
            <button type="button" class="btn" id="styled-choose-button"><i class="fa fa-upload"></i> Upload an image</button>

            <%= f.file_field :image, id:"choose-file" %><br>
            <%= f.hidden_field :image_cache %>

            <div class="actions">
              <%= f.submit class:"btn btn-default btn-block", id:"picture_submit_button" %>
            </div>
          <% end %>
        </div>

